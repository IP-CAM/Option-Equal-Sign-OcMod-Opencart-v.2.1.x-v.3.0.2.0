	<file path="system/library/cart/cart.php" error="log">
		<operation error="log">
			<search>
				<![CDATA[public function add]]>
			</search>
			<add position="before">
				<![CDATA[
	/// << <insertvar>MODCODE</insertvar>
	private function hasEqualPrefix($option_data, $key = 'price') {
		return in_array('=', array_column($option_data, $key . '_prefix'));
	}

	private function getOptionValue($option_data, $key = 'price') {
		$value = 0;

		foreach ($option_data as $option) {
				if ($option[$key . '_prefix'] == '=' || $option[$key . '_prefix'] == '+' ) {
					$value += $option['price'];
				} elseif ($option[$key . '_prefix'] == '-') {
					$value -= $option['price'];
				}
		}

		return $value;
	}
	/// >> <insertvar>MODCODE</insertvar>]]>
			</add>
		</operation>

		<operation error="log" info="set price">
			<search>
				<![CDATA[$price + $option_price]]>
			</search>
			<add position="replace">
				<![CDATA[$this->hasEqualPrefix($option_data) ? $this->getOptionValue($option_data) : ($price + $option_price)]]>
			</add>
		</operation>

		<operation error="log" info="set points">
			<search>
				<![CDATA[$product_query->row['points'] + $option_points]]>
			</search>
			<add position="replace">
				<![CDATA[$this->hasEqualPrefix($option_data, 'points') ? $this->getOptionValue($option_data, 'points') : ($product_query->row['points'] + $option_points)]]>
			</add>
		</operation>

		<operation error="log" info="set weight">
			<search>
				<![CDATA[$product_query->row['weight'] + $option_weight]]>
			</search>
			<add position="replace">
				<![CDATA[$this->hasEqualPrefix($option_data, 'weight') ? $this->getOptionValue($option_data, 'weight') : ($product_query->row['weight'] + $option_weight)]]>
			</add>
		</operation>
	</file>

